#include <iostream>
#include <vector>
#include <algorithm>
 
typedef long long ll;
 
int main()
{
	ll n{};
	ll x{};
 
	std::cin >> n >> x;
 
	std::vector<ll> coins(static_cast<std::size_t>(n));
 
	for (ll i{ 0 }; i < n; ++i)
	{
		std::cin >> coins[static_cast<std::size_t>(i)];
	}
 
	std::vector<ll> sum(static_cast<std::size_t>(x + 1));
 
	sum[0] = 1;
 
	for (ll k{ 0 }; k < n; ++k)
	{
		for (ll i{ coins[static_cast<std::size_t>(k)] }; i <= x; ++i)
		{
			sum[static_cast<std::size_t>(i)] += sum[static_cast<std::size_t>(i - coins[static_cast<std::size_t>(k)])]; 
			sum[static_cast<std::size_t>(i)] %= 1000000007; 
		}
	}
 
	std::cout << sum[static_cast<std::size_t>(x)]; 
 
	return 0; 
}
