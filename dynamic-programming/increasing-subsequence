#include <iostream>
#include <vector>
#include <algorithm>
 
typedef long long ll;
 
int main()
{
	std::ios::sync_with_stdio(false); 
	std::cin.tie(nullptr); 
 
	ll n{};
	std::cin >> n; 
 
	std::vector<ll> arr(n);
 
	for (auto& x : arr)
	{
		std::cin >> x; 
	}
 
	std::vector<ll> dp(n + 1);
 
	std::vector<ll> tail{}; 
 
	for (auto& x : arr)
	{
		auto it = std::lower_bound(tail.begin(), tail.end(), x); 
 
		if (it == tail.end())
		{
			tail.push_back(x); 
		}
		else
		{
			*it = x; 
		}
	}
 
	std::cout << tail.size(); 
}
