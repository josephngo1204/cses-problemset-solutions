#include <iostream>
#include <vector>
 
typedef long long ll; 
 
int main()
{
	std::ios_base::sync_with_stdio(false);
	std::cin.tie(NULL);
 
	ll t{}; 
	std::cin >> t;
 
	std::vector<std::vector<ll>> dp(static_cast<std::size_t>(1000002), std::vector<ll>(2));
 
	dp[1][0] = 1;
	dp[1][1] = 1;
 
	for (ll i{ 2 }; i <= 1000000; ++i)
	{
		dp[static_cast<std::size_t>(i)][0] = (4 * dp[static_cast<std::size_t>(i - 1)][0]) + dp[static_cast<std::size_t>(i - 1)][1];
		dp[static_cast<std::size_t>(i)][0] %= 1000000007;
 
		dp[static_cast<std::size_t>(i)][1] = (2 * dp[static_cast<std::size_t>(i - 1)][1]) + dp[static_cast<std::size_t>(i - 1)][0];
		dp[static_cast<std::size_t>(i)][1] %= 1000000007;
	}
	
	for (ll j{ 0 }; j < t; ++j)
	{
		ll n{};
		std::cin >> n; 
 
		ll ans{};
 
		ans = dp[static_cast<std::size_t>(n)][0] + dp[static_cast<std::size_t>(n)][1]; 
		ans %= 1000000007; 
		std::cout << ans << "\n"; 
	}
 
	return 0;
}
