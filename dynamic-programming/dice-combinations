#include <iostream>
#include <vector>
 
typedef long long ll;
 
int main()
{
	ll n{};
	std::cin >> n;
 
	std::vector<ll> count(static_cast<std::size_t>(n + 1)); 
 
	count[0] = 1;
 
	std::vector<ll> dice{ 1, 2, 3, 4, 5, 6 }; 
	ll m{ 1000000007 }; 
 
	for (ll i{ 0 }; i <= n; ++i)
	{
		for (auto x : dice)
		{
			if (i - x >= 0)
			{
				count[static_cast<std::size_t>(i)] += count[static_cast<std::size_t>(i - x)];
				count[static_cast<std::size_t>(i)] %= m; 
 
			}
		}
	}
 
	std::cout << count[static_cast<std::size_t>(n)]; 
 
	return 0; 
}
