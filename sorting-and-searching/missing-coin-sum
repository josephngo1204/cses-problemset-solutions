#include <iostream>
#include <vector>
#include <algorithm>
 
typedef long long ll; 
 
int main()
{
	ll n{};
	std::cin >> n; 
 
	std::vector<ll> arr(static_cast<std::size_t>(n)); 
 
	for (ll i{ 0 }; i < n; ++i)
	{
		ll a{};
		std::cin >> a;
 
		arr[static_cast<std::size_t>(i)] = a;
	}
 
	std::sort(arr.begin(), arr.end()); 
 
	ll sum{};
 
	for (ll i{ 0 }; i < n; ++i)
	{
		if (arr[static_cast<std::size_t>(i)] > sum + 1)
		{
			break; 
		}
 
		sum += arr[static_cast<std::size_t>(i)];
	}
 
	std::cout << sum + 1;
}
