#include <iostream>
#include <map>
#include <algorithm>
 
typedef long long ll; 
 
int main()
{
	std::ios_base::sync_with_stdio(false);
	std::cin.tie(NULL);
 
	ll n{};
	std::cin >> n; 
 
	std::map<ll, ll> freq{};
 
	for (ll i{ 0 }; i < n; ++i)
	{
		ll x{}; 
		std::cin >> x; 
 
		freq[x] += 1; 
	}
 
	ll ans{1};
 
	for (auto& [value, fr] : freq)
	{
		ans = (ans * (fr + 1)) % (static_cast<ll>(1e9 + 7));
	}
 
	std::cout << ans - 1; 
 
	return 0; 
}
